<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.travisway.shoppinghelp.MainActivity$PlaceholderFragment">


    <Button
        android:id="@+id/ten"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/five"
        android:background="@color/colorAccent"

        android:text="10%"
        android:textStyle="bold" />

    <Button
        android:id="@+id/thirty"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/colorAccent"

        android:text="30%"
        android:textStyle="bold"
        android:layout_below="@+id/twentyfive"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/thirtyfive"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/thirty"
        android:background="@color/colorAccent"

        android:text="35%"
        android:textStyle="bold" />

    <Button
        android:id="@+id/forty"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/thirtyfive"
        android:background="@color/colorAccent"
        android:elevation="0dp"

        android:text="40%"
        android:textStyle="bold"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/twentyfive"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/colorAccent"

        android:text="25%"
        android:textStyle="bold"
        android:layout_below="@+id/inputPercent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/fifteen"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ten"
        android:background="@color/colorAccent"

        android:text="15%"
        android:textStyle="bold" />

    <Button
        android:id="@+id/twenty"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fifteen"
        android:background="@color/colorAccent"
        android:elevation="0dp"

        android:text="20%"
        android:textStyle="bold"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/five"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/colorAccent"

        android:text="5%"
        android:textStyle="bold"
        android:layout_below="@+id/inputPercent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/inputPercent"
        android:layout_width="155dp"
        android:layout_height="40dp"

        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/calculate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"

        android:text="Calculate"
        android:textStyle="bold"
        android:layout_above="@+id/clear"
        android:layout_alignLeft="@+id/cusPer"
        android:layout_alignStart="@+id/cusPer"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/clear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@+id/forty"
        android:layout_alignBottom="@+id/forty"
        android:layout_alignLeft="@+id/calculate"
        android:layout_alignStart="@+id/calculate"
        android:background="@android:color/black"

        android:text="clear"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Original Price"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cusPer"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_above="@+id/cusPer"
        android:layout_alignEnd="@+id/cusPer"
        android:layout_alignRight="@+id/cusPer"

        android:text="Percent"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/twentyfive"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/twentyfive"
        android:layout_below="@+id/textView"

        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>
