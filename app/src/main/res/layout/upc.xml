<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.travisway.shoppinghelp.MainActivity$PlaceholderFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="34dp"

        android:text="Units"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/units1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:text="Units"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:text="Price"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/price1"
        android:layout_alignStart="@+id/price1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="30dp"

        android:text="Price"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_above="@+id/units2"
        android:layout_alignLeft="@+id/price2"
        android:layout_alignStart="@+id/price2" />

    <EditText
        android:id="@+id/price1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/units1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:id="@+id/price2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/clear"
        android:layout_alignStart="@+id/clear" />

    <EditText
        android:id="@+id/units2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="30dp"

        android:text="Item 1"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textView3"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"

        android:text="Item 2"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_toLeftOf="@+id/price1"
        android:layout_toStartOf="@+id/price1" />

    <TextView
        android:id="@+id/item2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/textView2"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/clear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@android:color/black"
        android:elevation="20dp"

        android:text="Clear"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/upc"
        android:layout_alignBottom="@+id/upc"
        android:layout_toRightOf="@+id/item2"
        android:layout_toEndOf="@+id/item2" />

    <Button
        android:id="@+id/upc"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="#118c01"
        android:elevation="24dp"

        android:text="Calculate"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/units2"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

</RelativeLayout>
